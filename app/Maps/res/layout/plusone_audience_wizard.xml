<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/plusone_audience_wizard_header" />
    <include android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/search_bar" />
    <FrameLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <ListView android:id="@id/circleList" android:layout_width="fill_parent" android:layout_height="fill_parent" android:choiceMode="multipleChoice" />
        <com.google.googlenav.ui.view.android.ModalOverlay android:id="@id/overlay" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/buttonPanel" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@android:style/ButtonBar">
        <Button android:id="@id/ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" android:onClick="onClick" />
        <Button android:id="@id/cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" android:onClick="onClick" />
    </LinearLayout>
</LinearLayout>
