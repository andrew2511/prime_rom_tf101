<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/logo_header" />
    <LinearLayout android:orientation="horizontal" android:id="@id/tabs" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@id/spotlightTab" android:background="@drawable/phone_tab_off" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:id="@id/spotlightTabLabel" android:text="@string/tabs_spotlight" style="@style/tabLabel" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@id/gamesTab" android:background="@drawable/phone_tab_active" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <TextView android:id="@id/gamesTabLabel" android:text="@string/tabs_games" style="@style/tabLabel" />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@id/tabLine" android:layout_below="@id/tabs" style="@style/tabBottomBar" />
</LinearLayout>
