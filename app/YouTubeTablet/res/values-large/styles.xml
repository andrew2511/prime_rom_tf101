<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarView_TabView</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarView_TabText</item>
    </style>
    <style name="Theme.Home" parent="@style/Theme">
        <item name="android:windowBackground">@drawable/bg_yt_home_holo</item>
    </style>
    <style name="Theme.Results" parent="@style/Theme">
        <item name="android:windowBackground">@drawable/bg_yt_home_holo</item>
    </style>
    <style name="Theme.Channel" parent="@style/Theme">
        <item name="android:windowBackground">@drawable/bg_yt_channel_holo</item>
    </style>
    <style name="Theme.Watch" parent="@style/Theme">
        <item name="android:windowBackground">@drawable/bg_yt_watch_holo</item>
    </style>
    <style name="Theme.Playlist" parent="@style/Theme">
        <item name="android:windowBackground">@drawable/bg_yt_channel_holo</item>
    </style>
    <style name="Theme.Settings" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/bg_yt_home_holo</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="ActionBarView_TabText" parent="@android:style/Widget">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ActionBarView_TabView">
        <item name="android:background">@drawable/action_bar_tab_drawable</item>
        <item name="android:paddingLeft">11.0dip</item>
        <item name="android:paddingRight">11.0dip</item>
    </style>
    <style name="Widget.PagedListView" parent="@android:style/Widget.Holo.ListView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:layout_marginLeft">16.0dip</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/video_grid_vertical_spacing</item>
        <item name="android:animateLayoutChanges">false</item>
    </style>
    <style name="Widget.PagedGridView" parent="@android:style/Widget.Holo.GridView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingRight">11.0dip</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:layout_marginLeft">11.0dip</item>
        <item name="android:layout_marginTop">11.0dip</item>
        <item name="android:listSelector">@color/full_transparent</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
        <item name="android:animateLayoutChanges">false</item>
    </style>
    <style name="Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
    <style name="SpinnerItem" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:minHeight">48.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Sidebar" parent="@android:style/Widget.Holo.ListView">
        <item name="android:fadingEdge">vertical</item>
        <item name="android:cacheColorHint">@color/full_transparent</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="SidebarItem" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/sidebar_item_background</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:minHeight">47.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
