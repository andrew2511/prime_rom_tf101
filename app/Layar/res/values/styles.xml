        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="BottomScreenshotBarText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color_light</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
