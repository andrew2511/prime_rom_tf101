<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="asusProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:progressDrawable">@anim/asus_ep_loading</item>
    </style>
    <style name="Theme" parent="@android:style/Theme" />
    <style name="Theme.Transparent" parent="@android:style/Theme.Holo">
        <item name="android:colorForeground">#ffffffff</item>
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="AsusDialog">
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="Theme.VibeActivity" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/VibeActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/BookListOverflow</item>
    </style>
    <style name="Theme.BookListActivity" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/BookListActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/BookListOverflow</item>
    </style>
    <style name="VibeActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@drawable/vibe_logo</item>
        <item name="android:background">@drawable/action_bar</item>
        <item name="android:height">56.0px</item>
        <item name="android:title">@string/book</item>
        <item name="android:logo">@drawable/vibe_logo</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="BookListActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@drawable/vibe_logo</item>
        <item name="android:background">@drawable/action_bar</item>
        <item name="android:height">56.0px</item>
        <item name="android:title"></item>
        <item name="android:logo">@drawable/asus_ep_apic_reader_small</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    <style name="HoloButton">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
    </style>
    <style name="BookListOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_re</item>
    </style>
    <style name="blackCursorEditText" parent="@android:style/Widget.TextView">
        <item name="android:textCursorDrawable">@drawable/black</item>
    </style>
</resources>
