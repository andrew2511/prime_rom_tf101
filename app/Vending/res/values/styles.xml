<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyAppsHeaderText">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/section_header_foreground</item>
        <item name="android:shadowColor">@color/title_bar_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.25</item>
    </style>
    <style name="MyAppsActionBar.Title" parent="@style/MyAppsActionBar">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/section_header_foreground</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:shadowColor">@color/title_bar_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.25</item>
    </style>
    <style name="MyAppsActionBar.Spinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_holo_light</item>
    </style>
    <style name="MyAppsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_fade</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle|showCustom</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:titleTextStyle">@style/MyAppsActionBar.Title</item>
    </style>
    <style name="MarketRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">14.0dip</item>
        <item name="android:progressDrawable">@drawable/small_ratingbar</item>
        <item name="android:minHeight">14.0dip</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="MoreButton">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:background">@drawable/button_more</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/info_more</item>
    </style>
    <style name="MoreButtonLight" parent="@style/MoreButton">
        <item name="android:background">@drawable/button_more_light</item>
    </style>
    <style name="MyAppsButton" parent="@android:style/Widget.Holo.Button" />
    <style name="MyAppsButtonTextAppearance">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="FatHeaderButton">
        <item name="android:textSize">@dimen/fat_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingTop">@dimen/fat_button_top_padding</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">@dimen/fat_button_bottom_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/fat_button_height</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:shadowColor">@color/title_bar_shadow</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.75</item>
    </style>
    <style name="HomeNavButton" parent="@style/HeaderText">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="AssetInfoScreenshot">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#ffededed</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">invisible</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Theme.CustomDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Theme.PurchaseDialog" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowMinWidthMajor">60.000004%</item>
        <item name="android:windowMinWidthMinor">39.999996%</item>
    </style>
    <style name="DetailsPage_FooterButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/details_button_height</item>
        <item name="android:drawablePadding">20.0dip</item>
    </style>
    <style name="DetailsPage_MoreButton" parent="@style/DetailsPage_FooterButton">
        <item name="android:drawableRight">@drawable/ic_more_arrow</item>
    </style>
    <style name="DetailsPage_LessButton" parent="@style/DetailsPage_FooterButton">
        <item name="android:drawableLeft">@drawable/ic_less_arrow</item>
    </style>
    <style name="DetailsPage_SummaryText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:lines">1</item>
    </style>
    <style name="DetailsPage_HeaderText" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">1.0sp</item>
    </style>
    <style name="MyAppsTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@drawable/actiontabs_bar</item>
        <item name="android:ratingBarStyleSmall">@style/MarketRatingBarSmall</item>
        <item name="android:actionBarStyle">@style/MyAppsActionBar</item>
        <item name="android:actionDropDownStyle">@style/MyAppsActionBar.Spinner</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
    </style>
</resources>
