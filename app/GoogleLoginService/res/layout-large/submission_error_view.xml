<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/setupWizardOuterFrame"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textAppearance="@style/Title" android:gravity="bottom" android:id="@id/account_setup_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/content_margin_left" android:minHeight="@dimen/title_height" android:text="@string/show_error_activity_title" android:layout_alignParentLeft="true" />
    <View android:id="@id/top_divider" android:layout_below="@id/account_setup_title" style="@style/TopDivider" />
    <TextView android:id="@id/submission_title" android:visibility="gone" android:layout_below="@id/top_divider" android:layout_centerHorizontal="true" style="@style/DescriptionText" />
    <TextView android:id="@id/explanation" android:text="@string/submission_error_text" android:layout_below="@id/submission_title" android:layout_centerHorizontal="true" style="@style/DescriptionText" />
    <LinearLayout android:gravity="right" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignLeft="@id/explanation" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
        <View android:id="@id/bottom_divider" style="@style/BottomDivider" />
        <LinearLayout android:orientation="horizontal" android:id="@id/buttons" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@id/back_button" android:visibility="gone" android:text="@string/back_button_label" style="@style/Button" />
            <Button android:id="@id/try_again_button" android:layout_marginLeft="@dimen/button_horizontal_margin" android:text="@string/try_again_button_label" style="@style/Button" />
            <Button android:id="@id/setupwifi_button" android:visibility="gone" android:layout_marginLeft="@dimen/button_horizontal_margin" android:text="@string/setup_wifi_button_label" style="@style/Button" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
