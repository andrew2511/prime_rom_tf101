<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView android:textStyle="bold" android:paddingTop="3.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/credit_card_type" />
        <Spinner android:entries="@array/credit_card_type_array" android:id="@id/payment_credit_card_type" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/credit_card_type_hint" />
        <EditText android:id="@id/payment_credit_card_number" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/credit_card_number" android:inputType="number" />
        <EditText android:id="@id/payment_credit_cvv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/credit_card_cvv" android:maxLength="3" android:inputType="number" />
        <Spinner android:id="@id/payment_credit_card_expire_year" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/credit_card_expire_year" />
        <Spinner android:id="@id/payment_credit_card_expire_month" android:layout_width="fill_parent" android:layout_height="wrap_content" android:prompt="@string/credit_card_expire_month" />
        <TextView android:textStyle="bold" android:paddingTop="3.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/credit_billing_address" />
        <EditText android:id="@id/payment_credit_card_holder" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/credit_card_holder" />
        <EditText android:id="@id/payment_credit_card_street" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/street" />
        <EditText android:id="@id/payment_credit_card_city" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/city" />
        <EditText android:id="@id/payment_credit_card_state" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/state" />
        <Spinner android:entries="@array/country_names" android:id="@id/payment_credit_card_country" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/country" />
        <EditText android:id="@id/payment_credit_card_zip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/zip" />
        <Button android:id="@id/payment_btn_ok" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/btn_done" />
    </LinearLayout>
</ScrollView>
