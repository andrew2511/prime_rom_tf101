<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/wireless_networks_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:persistent="false" android:title="@string/airplane_mode" android:key="toggle_airplane" android:summary="@string/airplane_mode_summary" android:disableDependentsState="true" />
    <CheckBoxPreference android:persistent="false" android:title="@string/wifi_quick_toggle_title" android:key="toggle_wifi" android:summary="@string/wifi_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/wifi_settings" android:key="wifi_settings" android:summary="@string/wifi_settings_summary" android:fragment="com.android.settings.wifi.WifiSettings" />
    <CheckBoxPreference android:persistent="false" android:title="@string/bluetooth_quick_toggle_title" android:key="toggle_bluetooth" android:summary="@string/bluetooth_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/bluetooth_settings_title" android:key="bt_settings" android:summary="@string/bluetooth_settings_summary" android:fragment="com.android.settings.bluetooth.BluetoothSettings" />
    <PreferenceScreen android:title="@string/tether_settings_title_all" android:key="tether_settings" android:summary="@string/tether_settings_summary_all" android:fragment="com.android.settings.TetherSettings" />
    <PreferenceScreen android:title="@string/vpn_settings_title" android:key="vpn_settings" android:summary="@string/vpn_settings_summary" android:fragment="com.android.settings.vpn.VpnSettings" />
    <CheckBoxPreference android:persistent="false" android:title="@string/nfc_quick_toggle_title" android:key="toggle_nfc" android:summary="@string/nfc_quick_toggle_summary" />
    <PreferenceScreen android:title="@string/network_settings_title" android:key="mobile_network_settings" android:summary="@string/network_settings_summary" android:dependency="toggle_airplane">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.Settings" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/proxy_settings_title" android:key="proxy_settings" android:summary="@string/proxy_settings_summary" android:fragment="com.android.settings.ProxySelector" />
</PreferenceScreen>
