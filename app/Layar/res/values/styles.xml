        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bottom_menu_background_p</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DefaultText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="PopupMenuText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">19.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/popup_menu_item_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TabTitleText" parent="@style/TitleText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="CategoriesTitleText" parent="@style/TitleText">
        <item name="android:maxLines">2</item>
    </style>
    <style name="BoldTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/preference_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DescriptionText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/details_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="DetailsText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/details_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="SectionHeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color_light</item>
