                <TextView android:textSize="15.0sp" android:textColor="@color/headertext" android:layout_gravity="center" android:id="@id/mPath" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/navigate_root_my_webstorage" />
