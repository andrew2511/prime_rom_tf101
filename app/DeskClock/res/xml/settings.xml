<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/settings"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:title="@string/alarm_in_silent_mode_title" android:key="alarm_in_silent_mode" android:summary="@string/alarm_in_silent_mode_summary" />
    <VolumePreference android:persistent="false" android:title="@string/alarm_volume_title" android:summary="@string/alarm_volume_summary" android:dialogTitle="@string/alarm_volume_title" android:streamType="alarm" />
