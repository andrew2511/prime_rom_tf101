<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/RelativeLayout01" android:background="@drawable/pixbg_02" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@android:drawable/title_bar" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/headIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5.0px" android:src="@drawable/picon" android:layout_centerVertical="true" />
            <TextView android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0px" android:text="Upload photo" android:layout_toRightOf="@id/headIcon" android:layout_centerVertical="true" />
            <ImageView android:id="@id/albumThumbnail" android:background="#00000000" android:layout_width="72.0px" android:layout_height="72.0px" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <TextView android:textAppearance="?android:textAppearanceMedium" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10.0px" android:layout_marginLeft="15.0px" android:text="@string/selectAlbum" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0px">
            <Spinner android:layout_gravity="center" android:id="@id/albumList" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0" />
            <ImageButton android:gravity="center_vertical" android:id="@id/createAlbumBtn" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/add" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:id="@id/startUploadBtn" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/add_album_confirm" android:layout_weight="1.0" />
        <Button android:id="@id/cancelUploadBtn" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/app_cancel" android:layout_weight="1.0" />
    </LinearLayout>
</RelativeLayout>
