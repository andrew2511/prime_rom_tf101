    </style>
    <style name="LayarTheme.Light" parent="@android:style/Theme.Light">
        <item name="android:buttonStyle">@style/BaseButton</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTitleBackgroundStyle">@style/SectionHeaderText</item>
        <item name="android:listViewStyle">@style/BaseListView</item>
    </style>
    <style name="LayarTheme" parent="@style/LayarTheme.Light" />
    <style name="LayarTitleTheme.Black" parent="@style/LayarTheme.Black">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LayarTitleTheme.Light" parent="@style/LayarTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LayarTitleTheme" parent="@style/LayarTitleTheme.Light" />
    <style name="LayarBlackTheme" parent="@style/LayarTitleTheme.Black">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="FullScreenTheme" parent="@style/LayarTitleTheme">
        <item name="android:buttonStyle">@style/BaseButton</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="StandartButtonsTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/BaseListView</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ARTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:listViewStyle">@style/BaseListView</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="MainScreenTheme" parent="@style/FullScreenTheme">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="FilterTheme" parent="@style/LayarTheme.Black">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/FilterTextView</item>
    </style>
    <style name="FilterTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="IntroTheme" parent="@android:style/Theme.Light">
        <item name="android:buttonStyle">@style/BaseButton</item>
        <item name="android:windowTitleBackgroundStyle">@style/SectionHeaderText</item>
        <item name="android:listViewStyle">@style/BaseListView</item>
    </style>
    <style name="IntroLink">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/intro_link</item>
    </style>
    <style name="AppDialogTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="BiwDialogTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/transparency</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="SmartDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TabTheme" parent="@style/LayarTitleTheme">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LargeButton">
        <item name="android:textSize">11.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_large_x</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AudioSeekBar">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">19.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/slider_background</item>
        <item name="android:progressDrawable">@drawable/slider_background</item>
        <item name="android:minHeight">19.0dip</item>
        <item name="android:thumb">@drawable/btn_player_slider</item>
        <item name="android:thumbOffset">0.0dip</item>
    </style>
    <style name="SubsectionButtonText">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BaseListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/default_list_bg_color</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@color/default_list_bg_color</item>
        <item name="android:divider">@color/default_list_divider_color</item>
        <item name="android:dividerHeight">1.0dip</item>
    </style>
    <style name="BaseButton" parent="@android:style/Widget.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bottom</item>
    </style>
    <style name="FullRowButton" parent="@style/BaseButton">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4.0dip</item>
        <item name="android:layout_marginRight">4.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ButtonsBar">
