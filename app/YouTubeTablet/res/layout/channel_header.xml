<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:padding="4.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="@drawable/avatar_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2.0dip">
        <ImageView android:id="@id/channel_avatar" android:layout_width="@dimen/avatar_width" android:layout_height="@dimen/avatar_height" android:layout_margin="1.0px" android:scaleType="centerCrop" />
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="7.0dip">
        <TextView android:textSize="@dimen/large_font_size" android:textStyle="bold" android:textColor="@color/white_text" android:id="@id/channel_title" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/extra_small_font_size" android:id="@id/channel_views" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/channel_stats_views_empty" />
        <TextView android:textSize="@dimen/extra_small_font_size" android:id="@id/channel_uploaded" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/channel_stats_uploaded_empty" />
        <TextView android:textSize="@dimen/extra_small_font_size" android:id="@id/channel_subscribers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/channel_stats_subscribers_empty" />
    </LinearLayout>
</LinearLayout>
